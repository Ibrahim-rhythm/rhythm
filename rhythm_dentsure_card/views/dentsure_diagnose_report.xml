<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="densure_diagnose_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page" >
                        <table class="table table-borderless" style="direction:rtl;color:#145369;font-size:20px;font-weight:bold">
                            <tr>
                                <td style="width:18%"><p>إسم المريض</p></td>
                                <td style="width:2%;"><div style="height:15px; width:4px; background-color:#2596be"/></td>
                                <td style="width:28%"><p t-field="o.name"/></td>
                                <td style="width:10%"/>
                                <td style="width:18%"><p>تاريخ المشكلة</p></td>
                                <td style="width:2%;"><div style="height:15px; width:4px; background-color:#2596be"/></td>
                                <td style="width:25%"><p t-field="o.diagnoses_date"/></td>
                            </tr>
                            <tr>
                                <td style="width:18%"><p>الطبيب المعالج</p></td>
                                <td style="width:2%;"><div style="height:15px; width:4px; background-color:#2596be"/></td>
                                <td style="width:28%"><p t-field="o.doctor_id"/></td>
                            </tr>

                        </table>

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
